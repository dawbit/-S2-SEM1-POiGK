<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <DockPanel>
        <ToolBar Name="MyToolbar" DockPanel.Dock="Top" Height="60">
            <RadioButton Name="LineButton" Background="#FFB0AEAE" Content="Linia" Height="28" Width="100" HorizontalAlignment="Left" GroupName="ShapeGroup" Click="LineButton_Click" IsChecked="True" Margin="0,3,0,25.2"/>
            <RadioButton Name="PointButton"  Background="#FFB0AEAE" Content="Punkt" Height="28" Width="100" GroupName="ShapeGroup" Click="PointButton_Click" Margin="0,3,0,25.2"/>
            <RadioButton Name="RectangleButton" Background="#FFB0AEAE" Content="Prostokat" Height="28" Width="100" GroupName="ShapeGroup" Click="RectangleButton_Click" Margin="0,3,0,25.2"/>
        </ToolBar>

        <Canvas Name="paintSurface" MouseDown="PaintSurface_MouseDown" MouseUp="PaintSurface_MouseUp" MouseMove="PaintSurface_MouseMove">
            <Canvas.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Canvas.Background>
        </Canvas>
    </DockPanel>
</Window>