<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="565.36">

    <DockPanel>
        <ToolBar Name="MyToolbar" DockPanel.Dock="Top" Height="60">
            <RadioButton Name="LineButton" Background="#FFB0AEAE" Content="Linia" Height="50" Width="122" HorizontalAlignment="Left" GroupName="ShapeGroup" Click="LineButton_Click" IsChecked="True"/>
            <RadioButton Name="PointButton"  Background="#FFB0AEAE" Content="Punkt" Height="50" Width="122" GroupName="ShapeGroup" Click="PointButton_Click"/>
            <RadioButton Name="RectangleButton" Background="#FFB0AEAE" Content="Prostokat" Height="50" Width="122" GroupName="ShapeGroup" Click="RectangleButton_Click"/>
            <RadioButton Name="DragButton" Background="#FFB0B0AE" Content="Przeciągnij" Height="50" Width="122" GroupName="ShapeGroup" Click="DragButton_Click"/>
        </ToolBar>

        <Canvas Name="paintSurface" MouseDown="PaintSurface_MouseDown" MouseUp="PaintSurface_MouseUp" MouseMove="PaintSurface_MouseMove" MouseLeftButtonDown="PaintSurface_MouseLeftButtonDown" MouseLeftButtonUp="PaintSurface_MouseLeftButtonUp">
            <Canvas.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Canvas.Background>
        </Canvas>
    </DockPanel>
</Window>